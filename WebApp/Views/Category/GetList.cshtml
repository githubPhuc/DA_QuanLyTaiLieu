
@{
    ViewBag.Title = "GetList";
    var data = ViewBag.KetCaus as List<ToolsApp.Models.CategoryModels>;
}
<table id="myTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Tên loại văn bản</th>
            <th>Mô tả</th>
            <th>Nguời tạo</th>
            <th>Ngày tạo</th>
            <th>Nguời cập nhật</th>
            <th>Ngày cập nhật</th>
            <th>Tình trạng</th>
        </tr>
    </thead>
    <tbody>
        @{ var STT = 1; }
        @{
            if (data != null)
            {
                foreach (var item in data)
                {
                <tr>
                            <td>
                        
                                <a onclick="Edit('@item.Id')" class="btn btn-secondary btn-custom">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a onclick="Delete('@item.Id')" class="btn btn-danger btn-custom">
                                    <i class="far fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                    <td>@item.NameCategory</td>
                    <td>@item.DescriptionCategory</td>
                    <td>@item.NameUserCreate</td>
                    <td>@(item.DatetimeCreate.ToString("dd/MM/yyyy"))</td>
                    <td>@item.NameUserUpdate</td>
                    <td>@(item.DatetimeUpdate.HasValue ? item.DatetimeUpdate.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                    <td>
                        @if (item.Status == true)
                        {
                            <div class="d-flex align-items-center">
                                <i class="fa-solid fa-circle" style="color: green;"></i>
                                <span class="ml-1">Active</span>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center">
                                <i class="fa-solid fa-circle" style="color: red;"></i>
                                <span class="ml-1">Inactive</span>
                            </div>
                        }
                    </td>
                </tr>

                    STT++;
                }
            }
           
        }

        </tbody>
    </table>
