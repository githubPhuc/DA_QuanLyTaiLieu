    <script>
         $(document).ready(function () {
             LoadChart();
         });
        function LoadChart() {
            var selectYear = $('#selectYear').val();
            $.ajax({
                url: "@Url.Action("LoadChart")",
                type: 'POST',
                data: { selectYear: selectYear },
            }).done((result) => {
                if (result.status == 1) {
                    let data = result.obj;
                    let VanBanDi = [];
                    let VanBanDen = [];
                    let VanBanNoiBo = [];
                    let TaiLieu = [];
                    let SumVanBan = [];
                    for (let i = 0; i < data.length; i++) {
                        VanBanDi.push(data[i].VanBanDi);
                        VanBanDen.push(data[i].VanBanDen);
                        VanBanNoiBo.push(data[i].VanBanNoiBo);
                        TaiLieu.push(data[i].TaiLieu);
                        SumVanBan.push(data[i].VanBanDi + data[i].VanBanDen + data[i].VanBanNoiBo + data[i].TaiLieu);
                    }
                    var ctx = document.getElementById('myChart').getContext('2d');
                    var myChart = new Chart(ctx, {
                        type: 'line', // Loại biểu đồ chính
                        data: {
                            labels: [
                                "Tháng 1",
                                "Tháng 2",
                                "Tháng 3",
                                "Tháng 4",
                                "Tháng 5",
                                "Tháng 6",
                                "Tháng 7",
                                "Tháng 8",
                                "Tháng 9",
                                "Tháng 10",
                                "Tháng 11",
                                "Tháng 12",
                            ],
                            datasets: [{
                                data: VanBanDi,
                                label: "Tổng văn bản đi",
                                borderColor: "#3e95cd",
                                backgroundColor: "#7bb6dd",
                                fill: false,
                                type: 'line'
                            }, {
                                data: VanBanDen,
                                label: "Tổng văn bản đến",
                                borderColor: "#3cba9f",
                                backgroundColor: "#71d1bd",
                                fill: false,
                                type: 'line'
                            }, {
                                data: VanBanNoiBo,
                                label: "Tổng văn bản nội bộ",
                                borderColor: "#ffa500",
                                backgroundColor: "#ffc04d",
                                fill: false,
                                type: 'line'
                            },{
                                data: TaiLieu,
                                label: "Tổng tài liệu",
                                borderColor: "#6610f2",
                                backgroundColor: "#6610f2",
                                fill: false,
                                type: 'line'
                            },
                            // Thêm biểu đồ cột
                            {
                                data: SumVanBan,
                                label: "Tổng lượng văn bản và tài liệu từng tháng",
                                borderColor: "#ff6384",
                                backgroundColor: "#ff6384",
                                fill: false,
                                type: 'bar'
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    })
                }
                else {
                    notify(result.text, "error")
                }
            }).error((result) => {
                notify(result.text, "error")
                console.log(result);
            });
        }

